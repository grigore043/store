<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="item" author="grusnac">
        <createTable tableName="t_item">
            <column name="item_id" type="int">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="item_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="item_description" type="varchar(500)" />
        </createTable>
    </changeSet>

    <changeSet id="order" author="grusnac">
        <createTable tableName="t_order">
            <column name="order_id" type="int">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="order_item_count" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--<changeSet id="tag-1.0" author="grusnac">-->
        <!--<tagDatabase tag="1.0" />-->
    <!--</changeSet>-->

</databaseChangeLog>